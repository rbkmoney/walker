<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.rbkmoney</groupId>
    <artifactId>walker</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>walker</name>
    <description>Approver for claims</description>

    <parent>
        <groupId>com.rbkmoney</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>1.4.1.RELEASE</version>
    </parent>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <java.version>1.8</java.version>
    </properties>

    <profiles>
        <profile>
            <!--Container Jira Config-->
            <id>dev</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <jira.api.url>http://localhost:2990/jira</jira.api.url>
                <jira.user.name>walker@rbkmoney.com</jira.user.name>
                <jira.user.password>walker</jira.user.password>

                <jira.issue.type.name>Claim</jira.issue.type.name>
                <jira.project_key.name>CLAIM</jira.project_key.name>
                <jira.even_id.field>customfield_10000</jira.even_id.field>
                <jira.claim_id.field>customfield_10001</jira.claim_id.field>
                <jira.party_id.field>customfield_10002</jira.party_id.field>
                <jira.reason.field>customfield_10003</jira.reason.field>

                <bm.pooling.url>http://localhost:8023/repo</bm.pooling.url>
                <hg.party.management.url>http://localhost:8022/v1/processing/partymgmt</hg.party.management.url>
            </properties>
        </profile>
        <profile>
            <id>ci</id>
            <properties>
                <jira.api.url>https://rbkmoney.atlassian.net</jira.api.url>
                <jira.user.name>walker@rbkmoney.com</jira.user.name>
                <jira.user.password>walker</jira.user.password>

                <jira.issue.type.name>Claim</jira.issue.type.name>
                <jira.project_key.name>CLAIM</jira.project_key.name>
                <jira.even_id.field>customfield_10501</jira.even_id.field>
                <jira.claim_id.field>customfield_10500</jira.claim_id.field>
                <jira.party_id.field>customfield_10502</jira.party_id.field>
                <jira.reason.field>customfield_10503</jira.reason.field>

                <bm.pooling.url>http://localhost:8023/repo</bm.pooling.url>
                <hg.party.management.url>http://localhost:8022/v1/processing/partymgmt</hg.party.management.url>
            </properties>
        </profile>
    </profiles>

    <dependencies>
        <!--Thrirdparty libs-->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-aop</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.retry</groupId>
            <artifactId>spring-retry</artifactId>
        </dependency>
        <dependency>
            <groupId>de.codecentric</groupId>
            <artifactId>spring-boot-admin-starter-client</artifactId>
            <version>1.4.1</version>
        </dependency>
        <dependency>
            <groupId>net.rcarz</groupId>
            <artifactId>jira-client</artifactId>
            <version>0.5</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.rbkmoney.logback</groupId>
            <artifactId>nop-rolling</artifactId>
            <version>1.0.0</version>
        </dependency>
        <dependency>
            <groupId>net.logstash.logback</groupId>
            <artifactId>logstash-logback-encoder</artifactId>
            <version>4.6</version>
        </dependency>

        <!--RBK libs-->
        <dependency>
            <groupId>com.rbkmoney</groupId>
            <artifactId>eventstock-client</artifactId>
            <version>1.0.3</version>
        </dependency>
        <dependency>
            <groupId>com.rbkmoney</groupId>
            <artifactId>damsel</artifactId>
            <version>1.80-fc2b572</version>
        </dependency>

        <!--Test-->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>

        <resources>
            <resource>
                <directory>${project.basedir}</directory>
                <targetPath>${project.build.directory}</targetPath>
                <includes>
                    <include>Dockerfile</include>
                </includes>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>ru.concerteza.buildnumber</groupId>
                <artifactId>maven-jgit-buildnumber-plugin</artifactId>
                <version>1.2.9</version>
                <executions>
                    <execution>
                        <id>git-buildnumber</id>
                        <goals>
                            <goal>extract-buildnumber</goal>
                        </goals>
                        <phase>generate-resources</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>


    </build>


</project>
